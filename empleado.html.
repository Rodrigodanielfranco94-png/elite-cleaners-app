    </main>

    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyCwWg4qKg2OozxA0ngQOoukb8U7XwJS6vU",
            authDomain: "elite-cleaners-company.firebaseapp.com",
            databaseURL: "https://elite-cleaners-company-default-rtdb.firebaseio.com",
            projectId: "elite-cleaners-company",
            storageBucket: "elite-cleaners-company.firebasestorage.app",
            messagingSenderId: "720146701474",
            appId: "1:720146701474:web:729a9dc1fe01cf976b8bfb"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        // Supongamos que el email viene del login exitoso
        const loggedUserEmail = "ejemplo@elite.com"; // Aqu√≠ ir√≠a auth.currentUser.email

        function loadJobs() {
            db.ref('jobs').on('value', snap => {
                const data = snap.val();
                const list = document.getElementById('jobList');
                list.innerHTML = '';
                for(let id in data) {
                    if(data[id].empEmail === loggedUserEmail) {
                        const j = data[id];
                        list.innerHTML += `
                            <div class="glass p-6 border-t border-white/5">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="text-2xl font-black italic uppercase">${j.cli}</h3>
                                        <p class="text-xs text-gray-500 font-bold">${j.addr}</p>
                                    </div>
                                    <span class="text-[9px] font-black text-blue-500 bg-blue-500/10 px-2 py-1 rounded">${j.time}</span>
                                </div>

                                <button onclick="window.location.href='https://maps.apple.com/?q=${encodeURIComponent(j.addr)}'" 
                                    class="w-full bg-[#1a1a1a] p-4 btn-action mb-4 border border-white/10 flex justify-center items-center gap-2">
                                    üó∫Ô∏è GPS Navegaci√≥n
                                </button>

                                <div class="grid grid-cols-2 gap-3 mb-6">
                                    <button onclick="updateStatus('${id}', 'En Sitio')" 
                                        class="p-4 btn-action ${j.arrival ? 'bg-green-600/20 text-green-500' : 'bg-blue-600 text-white'}">
                                        ${j.arrival ? '‚úì Llegada: ' + j.arrival : '‚è± Registrar Llegada'}
                                    </button>
                                    <button onclick="updateStatus('${id}', 'Completado')" 
                                        class="p-4 btn-action ${j.finished ? 'bg-green-600/20 text-green-500' : 'bg-red-600 text-white'}">
                                        ${j.finished ? '‚úì Finalizado: ' + j.finished : 'üèÅ Finalizar'}
                                    </button>
                                </div>

                                <div class="bg-black/50 p-4 rounded-xl border border-white/5 italic text-sm text-gray-400 text-center">
                                    "${j.notes || 'Sin notas adicionales.'}"
                                </div>
                            </div>`;
                    }
                }
            });
        }

        function updateStatus(jobId, status) {
            const now = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            const updates = { status: status };
            if(status === 'En Sitio') updates.arrival = now;
            if(status === 'Completado') updates.finished = now;
            
            db.ref('jobs/' + jobId).update(updates);
        }

        loadJobs();
    </script>
